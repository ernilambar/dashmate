{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Dashboard Schema",
	"description": "Schema for a dashboard layout with widgets",
	"type": "object",
	"required": [ "columns" ],
	"properties": {
		"$schema": {
			"type": "string",
			"description": "Link to the JSON Schema for VS Code validation"
		},
		"columns": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [ "id" ],
				"properties": {
					"id": {
						"type": "string",
						"pattern": "^col-\\d+$"
					},
					"widgets": {
						"type": "array",
						"items": {
							"type": "object",
							"required": [ "id" ],
							"properties": {
								"id": {
									"type": "string",
									"pattern": "^[a-z-]+[a-z0-9-]*$"
								},
								"settings": {
									"type": "object",
									"additionalProperties": true
								},
								"collapsed": {
									"type": "boolean"
								}
							},
							"additionalProperties": false
						}
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
